{
  "name": "tmax",
  "version": "1.0.0",
  "description": "TMAX, short for Turbulent miZyind at Xion.",
  "repository": "git@github.com:miZyind/tmax.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "homepage": "https://mizyind.dev",
  "bugs": "https://github.com/miZyind/tmax/issues",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "yarn lint && next build",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint \"*/**/*.{ts,tsx}\" --max-warnings 0",
    "lint:css": "stylelint \"*/**/*.tsx\" --max-warnings 0"
  },
  "dependencies": {
    "@blueprintjs/core": "^4.17.8",
    "@blueprintjs/popover2": "^1.13.12",
    "chart.js": "^4.2.1",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "gsap": "^3.11.5",
    "highlight.js": "^11.7.0",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "next": "^13.3.0",
    "nookies": "^2.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.9",
    "swr": "^2.1.3"
  },
  "devDependencies": {
    "@blueprintjs/eslint-plugin": "^2.7.7",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@netlify/plugin-nextjs": "^4.33.0",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/lodash": "^4.14.192",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "babel-plugin-styled-components": "^2.1.1",
    "eslint-plugin-mizyind": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "postcss-syntax": "^0.36.2",
    "stylelint": "^15.4.0",
    "stylelint-config-recommended": "^11.0.0",
    "typescript": "^5.0.4",
    "typescript-styled-plugin": "^0.18.3"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "next-env.d.ts",
      "public/**/*.js"
    ],
    "extends": [
      "plugin:mizyind/next",
      "plugin:@blueprintjs/recommended"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended"
    ],
    "customSyntax": "@stylelint/postcss-css-in-js",
    "rules": {
      "function-no-unknown": null
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
