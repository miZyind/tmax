{
  "name": "tmax",
  "version": "1.0.0",
  "description": "TMAX, short for Turbulent miZyind at Xion.",
  "repository": "git@github.com:miZyind/tmax.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "homepage": "https://mizyind.dev",
  "bugs": "https://github.com/miZyind/tmax/issues",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "yarn lint && next build",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint \"*/**/*.{ts,tsx}\" --max-warnings 0",
    "lint:css": "stylelint \"*/**/*.tsx\" --max-warnings 0"
  },
  "dependencies": {
    "@blueprintjs/core": "^4.13.0",
    "@blueprintjs/popover2": "^1.10.2",
    "chart.js": "^4.1.1",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "gsap": "^3.11.4",
    "highlight.js": "^11.7.0",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "next": "^13.1.1",
    "nookies": "^2.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.6",
    "swr": "^2.0.0"
  },
  "devDependencies": {
    "@blueprintjs/eslint-plugin": "^2.6.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@netlify/plugin-nextjs": "^4.29.4",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/lodash": "^4.14.191",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/styled-components": "^5.1.26",
    "babel-plugin-styled-components": "^2.0.7",
    "eslint-plugin-mizyind": "^4.8.2",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "postcss-syntax": "^0.36.2",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "typescript": "^4.9.4",
    "typescript-styled-plugin": "^0.18.2"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "next-env.d.ts",
      "public/**/*.js"
    ],
    "extends": [
      "plugin:mizyind/next",
      "plugin:@blueprintjs/recommended"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "customSyntax": "@stylelint/postcss-css-in-js",
    "rules": {
      "function-no-unknown": null
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
