{
  "name": "tmax",
  "version": "1.0.0",
  "description": "TMAX, short for Turbulent miZyind at Xion.",
  "repository": "git@github.com:miZyind/tmax.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "homepage": "https://mizyind.dev",
  "bugs": "https://github.com/miZyind/tmax/issues",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "yarn lint && next build",
    "export": "next export",
    "start": "next start",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint \"*/**/*.{ts,tsx}\" --max-warnings 0",
    "lint:css": "stylelint \"*/**/*.tsx\" --max-warnings 0"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.51.2",
    "chart.js": "^3.5.1",
    "classnames": "^2.3.1",
    "gsap": "^3.8.0",
    "lodash": "^4.17.21",
    "next": "^11.1.2",
    "nookies": "^2.5.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.3",
    "swr": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@netlify/plugin-nextjs": "^3.9.2",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.15",
    "babel-plugin-styled-components": "^1.13.3",
    "eslint-plugin-mizyind": "^3.2.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.4.4",
    "typescript-styled-plugin": "^0.18.1"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:mizyind/next"
    ]
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
