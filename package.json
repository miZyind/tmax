{
  "name": "tmax",
  "version": "1.0.0",
  "description": "TMAX, short for Turbulent miZyind at Xion.",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:miZyind/tmax.git",
  "homepage": "https://mizyind.dev",
  "bugs": "https://github.com/miZyind/tmax/issues",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "lint": "eslint \"*/**/*.{ts,tsx}\" --max-warnings 0"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.35.0",
    "classnames": "^2.2.6",
    "gsap": "^3.5.1",
    "next": "^10.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "recoil": "^0.0.13",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/classnames": "^2.2.11",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/styled-components": "^5.1.4",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint-plugin-mizyind": "^2.0.3",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "typescript": "^4.0.5",
    "typescript-styled-plugin": "^0.15.0"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:mizyind/react"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
