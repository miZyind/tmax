{
  "name": "tmax",
  "version": "1.0.0",
  "description": "TMAX, short for Turbulent miZyind at Xion.",
  "repository": "git@github.com:miZyind/tmax.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "homepage": "https://mizyind.dev",
  "bugs": "https://github.com/miZyind/tmax/issues",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "yarn lint && next build",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint \"*/**/*.{ts,tsx}\" --max-warnings 0",
    "lint:css": "stylelint \"*/**/*.tsx\" --max-warnings 0"
  },
  "dependencies": {
    "@blueprintjs/core": "^5.0.1",
    "chart.js": "^4.3.0",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "gsap": "^3.12.2",
    "highlight.js": "^11.8.0",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "next": "^13.4.7",
    "nookies": "^2.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.0.1",
    "swr": "^2.2.0"
  },
  "devDependencies": {
    "@blueprintjs/eslint-plugin": "^3.0.0",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@netlify/plugin-nextjs": "^4.38.1",
    "@types/lodash": "^4.14.195",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^20.3.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint-plugin-mizyind": "4.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss-styled-syntax": "^0.4.0",
    "stylelint": "^15.9.0",
    "stylelint-config-recommended": "^12.0.0",
    "typescript": "^5.1.6",
    "typescript-styled-plugin": "^0.18.3"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "next-env.d.ts",
      "public/**/*.js"
    ],
    "extends": [
      "plugin:mizyind/next",
      "plugin:@blueprintjs/recommended"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended"
    ],
    "customSyntax": "postcss-styled-syntax"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
