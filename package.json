    "highlight.js": "^11.11.1",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "styled-components": "^6.1.19",
    "swr": "^2.3.6"
