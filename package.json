{
  "name": "tmax",
  "version": "1.0.0",
  "description": "TMAX, short for Turbulent miZyind at Xion.",
  "repository": "git@github.com:miZyind/tmax.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "homepage": "https://mizyind.dev",
  "bugs": "https://github.com/miZyind/tmax/issues",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "yarn lint && next build",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint \"*/**/*.{ts,tsx}\" --max-warnings 0",
    "lint:css": "stylelint \"*/**/*.tsx\" --max-warnings 0"
  },
  "dependencies": {
    "@blueprintjs/core": "^4.2.1",
    "@blueprintjs/popover2": "^1.1.4",
    "chart.js": "^3.7.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "gsap": "^3.10.4",
    "lodash": "^4.17.21",
    "next": "^12.1.6",
    "nookies": "^2.5.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "styled-components": "^5.3.5",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@netlify/plugin-nextjs": "^4.7.0",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/styled-components": "^5.1.25",
    "babel-plugin-styled-components": "^2.0.7",
    "eslint-plugin-mizyind": "^4.4.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "postcss-syntax": "^0.36.2",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "typescript": "^4.6.4",
    "typescript-styled-plugin": "^0.18.2"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "next-env.d.ts"
    ],
    "extends": [
      "plugin:mizyind/next"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "customSyntax": "@stylelint/postcss-css-in-js",
    "rules": {
      "function-no-unknown": null
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
