{
  "name": "tmax",
  "version": "1.0.0",
  "description": "TMAX, short for Turbulent miZyind at Xion.",
  "repository": "git@github.com:miZyind/tmax.git",
  "author": "miZyind <mizyind@gmail.com>",
  "license": "MIT",
  "homepage": "https://mizyind.dev",
  "bugs": "https://github.com/miZyind/tmax/issues",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "yarn lint && next build",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint \"*/**/*.{ts,tsx}\" --max-warnings 0",
    "lint:css": "stylelint \"*/**/*.tsx\" --max-warnings 0"
  },
  "dependencies": {
    "@blueprintjs/core": "^4.0.0",
    "@blueprintjs/popover2": "^1.0.0",
    "chart.js": "^3.7.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "gsap": "^3.9.1",
    "lodash": "^4.17.21",
    "next": "^12.1.0",
    "nookies": "^2.5.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.3",
    "swr": "^1.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@netlify/plugin-nextjs": "^4.2.8",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.22",
    "@types/react": "^17.0.42",
    "@types/react-dom": "^17.0.14",
    "@types/styled-components": "^5.1.24",
    "babel-plugin-styled-components": "^2.0.6",
    "eslint-plugin-mizyind": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "postcss-syntax": "^0.36.2",
    "stylelint": "^14.6.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "typescript": "^4.6.2",
    "typescript-styled-plugin": "^0.18.2"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "next-env.d.ts"
    ],
    "extends": [
      "plugin:mizyind/next"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "customSyntax": "@stylelint/postcss-css-in-js"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
