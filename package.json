  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --no-warn-ignored --ignore-pattern next-env.d.ts --max-warnings 0"
